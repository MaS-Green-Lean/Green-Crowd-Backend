{
    "env": {
        "node": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            2
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "never"
        ],
        "eol-last": [
            "error", 
            "always"
        ],
        "no-trailing-spaces": [
            "error"
        ],
        "no-console": [
            "error",
            { "allow": ["warn", "error", "info"] }
        ]
    }
}